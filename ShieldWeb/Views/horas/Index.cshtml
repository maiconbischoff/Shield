@model IEnumerable<ShieldWeb.Models.hora>

@{
    ViewBag.Title = "Index";
}

<h2>Horas cadastradas</h2>

<p>
    @Html.ActionLink("Cadastrar tempo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.quantidade_horas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comentario.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tarefa.titulo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.quantidade_horas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comentario.descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tarefa.titulo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
            @Html.ActionLink("Ver detalhes", "Details", new { id = item.id }) |
            @Html.ActionLink("Apagar", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
