@model ShieldWeb.Models.hora

@{
    ViewBag.Title = "Edit";
}

<h2>Editar tempo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tempo</h4>
